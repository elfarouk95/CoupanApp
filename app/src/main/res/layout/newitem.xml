<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_large"
    app:cardCornerRadius="@dimen/spacing_large"
    app:cardElevation="@dimen/spacing_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_medium">

        <TextView
            android:id="@+id/lblshop"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:layout_margin="@dimen/spacing_medium"
            android:text="المتجر  :" />

        <TextView
            android:id="@+id/siteurl"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:layout_marginRight="@dimen/spacing_medium"
            android:layout_toStartOf="@id/lblshop"
            android:layout_toLeftOf="@id/lblshop"
            android:text="@string/app_name"
            android:textColor="#06F" />

        <ImageView
            android:id="@+id/ImgAds"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/siteurl"
            android:layout_marginTop="@dimen/spacing_medium"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/lblvaleu"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ImgAds"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="قيمة الخصم  :" />

        <TextView
            android:id="@+id/value"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ImgAds"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:layout_marginRight="@dimen/spacing_medium"
            android:layout_toStartOf="@id/lblvaleu"
            android:layout_toLeftOf="@id/lblvaleu"
            android:text="@string/app_name" />


        <TextView
            android:id="@+id/lblCode"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/value"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="كود الخصم :" />

        <TextView
            android:id="@+id/code"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/value"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:layout_marginRight="@dimen/spacing_medium"
            android:layout_toStartOf="@id/lblCode"
            android:layout_toLeftOf="@id/lblCode"
            android:text="@string/app_name" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_share"
            android:tint="@color/colorAccent" />

        <Button
            android:id="@+id/copy"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_large"
            android:background="@drawable/rounded"
            android:drawableLeft="@drawable/copy"
            android:drawablePadding="@dimen/spacing_medium"
            android:drawableTint="#FFF"
            android:padding="@dimen/spacing_large"
            android:text="نسخ الكوبون"
            android:textColor="#000" />

    </RelativeLayout>


</android.support.v7.widget.CardView>